<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешаем cleartext трафик для всех IP-адресов и доменов -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    <!-- Дополнительная конфигурация для конкретных доменов/IP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">212.67.11.134</domain>
        <domain includeSubdomains="false">85.192.33.223</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
    </domain-config>
</network-security-config> 